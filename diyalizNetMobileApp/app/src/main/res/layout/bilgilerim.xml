<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="418dp"
        android:layout_height="83dp"
        android:background="#CFCCCC"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.001"
        app:title="Bilgilerim"
        app:titleTextColor="@color/main" />

    <LinearLayout
        android:layout_width="408dp"
        android:layout_height="594dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar2"
        app:layout_constraintVertical_bias="0.0">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="20dp">

            <TableRow>
                <TextView
                    android:text="Ad"
                    android:layout_marginLeft="15dp"
                    android:textSize="22dp"
                    android:textColor="@color/main"
                    android:textStyle="bold">
                </TextView>

            </TableRow>

            <TableRow>

                <EditText
                    android:id="@+id/editIsimBilg"
                    android:layout_width="362dp"
                    android:layout_marginLeft="12dp"
                    android:textSize="20dp"
                    android:textColor="@color/main"></EditText>
            </TableRow>
        </TableLayout>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="20dp">

            <TableRow>
                <TextView
                    android:text="Soyad"
                    android:layout_marginLeft="15dp"
                    android:textSize="22dp"
                    android:textColor="@color/main"
                    android:textStyle="bold">
                </TextView>
            </TableRow>
            <TableRow>

                <EditText
                    android:id="@+id/editSoyisimBilg"
                    android:layout_width="362dp"
                    android:textSize="20dp"
                    android:layout_marginLeft="12dp"></EditText>
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="20dp">

            <TableRow>
                <TextView
                    android:text="T.C. Kimlik Numarası"
                    android:layout_marginLeft="15dp"
                    android:textSize="22dp"
                    android:textColor="@color/main"
                    android:textStyle="bold">
                </TextView>

            </TableRow>
            <TableRow>

                <EditText
                    android:id="@+id/editTcBilgi"
                    android:layout_width="366dp"
                    android:layout_marginLeft="12dp"
                    android:textSize="20dp"
                    android:editable="false"></EditText>
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="20dp">

            <TableRow>
                <TextView
                    android:text="Adres"
                    android:layout_marginLeft="15dp"
                    android:textSize="22dp"
                    android:textColor="@color/main"
                    android:textStyle="bold">
                </TextView>
            </TableRow>
            <TableRow>

                <EditText
                    android:id="@+id/editAdresBilg"
                    android:layout_width="366dp"
                    android:layout_marginLeft="12dp"
                    android:textSize="20dp"
                    ></EditText>
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="20dp">

            <TableRow>
                <TextView
                    android:text="Telefon Numarası"
                    android:layout_marginLeft="15dp"
                    android:textSize="22dp"
                    android:textColor="@color/main"
                    android:textStyle="bold">
                </TextView>


            </TableRow>
            <TableRow>

                <EditText
                    android:id="@+id/editTelBilg"
                    android:layout_width="367dp"
                    android:layout_marginLeft="12dp"
                    android:textSize="20dp"
                    android:maxLength="11"
                    android:inputType="phone"></EditText>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>