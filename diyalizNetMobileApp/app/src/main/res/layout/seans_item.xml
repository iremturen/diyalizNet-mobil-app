<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_item2">

            <LinearLayout>

                <TableRow
                    android:layout_width="283dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="50dp">

                    <ImageView
                        android:id="@+id/seans_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/session"></ImageView>

                    <TextView
                        android:id="@+id/txtAd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="55dp"
                        android:layout_marginTop="19dp"
                        android:text="isim"
                        android:textColor="#6A6969"
                        android:textSize="15sp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/txtSoyad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="19dp"
                        android:text="soyisim"
                        android:textColor="#6A6969"
                        android:textSize="15sp"
                        android:textStyle="bold"></TextView>


                </TableRow>
            </LinearLayout>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/txtSaatSeans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="79dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="10dp"
                    android:text="seans saati"
                    android:textColor="#383939"
                    android:textSize="15sp"></TextView>

                <TextView
                    android:id="@+id/txtTcSeans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:text="hasta tc"
                    android:textColor="#6A6969"
                    android:textSize="15sp"></TextView>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp">


                <TextView
                    android:id="@+id/txtTarihSeans"
                    android:layout_width="121dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="-5dp"
                    android:text="seans tarihi"
                    android:textColor="#383939"
                    android:textSize="15sp"></TextView>

                <TextView
                    android:id="@+id/txtId"
                    android:layout_width="121dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="9dp"
                    android:textColor="@color/main"
                    android:textSize="15sp"
                    android:visibility="invisible"></TextView>


            </TableRow>


        </TableLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />
</androidx.constraintlayout.widget.ConstraintLayout>